<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:padding="12dp"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="120dp"
        android:src="@color/cardview_dark_background"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email address"
        android:textColorHint="#C3C2C2"
        android:minHeight="48dp"
        android:elevation="2dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/email_icon"
        android:padding="16dp"
        android:textColor="@color/black"
        android:layout_marginVertical="8dp"
        android:text="blakepat@me.com"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        android:textColorHint="#C3C2C2"
        android:shadowColor="@color/black"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:drawableEnd="@drawable/password_icon"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        android:text="123456"
        />

    <Button
        android:id="@+id/btnLogin"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginVertical="8dp"
        android:background="@drawable/button_background"
        android:text="Login"/>

    <android.widget.Button
        android:id="@+id/btnSignup"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00A8AE"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/sign_up_button_background"
        android:text="Sign Up!"/>

    <Button
        android:id="@+id/btnGuest"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#EBE7E7"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:text="Continue as Guest (limited features)"/>



</LinearLayout>