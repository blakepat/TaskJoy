<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar Styles -->
    <style name="CalendarHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CalendarDateText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarViewCustom">
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekText</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarDateText</item>
    </style>





    <!-- Add these colors to your colors.xml -->
    <color name="calendar_selected_day">#4CAF50</color>  <!-- Green color similar to the mood tracking image -->
    <color name="calendar_today">#B2DFDB</color>        <!-- Light green for today's date -->
</resources>