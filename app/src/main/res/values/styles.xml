<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Calendar Styles -->
    <style name="CalendarHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- styles.xml additions -->
        <style name="CalendarViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
            <item name="colorPrimary">@color/accent_green</item>
            <item name="colorOnPrimary">@color/card_background_white</item>
            <item name="android:textColorPrimary">@color/text_primary</item>
            <item name="android:fontFamily">sans-serif</item>
        </style>

        <style name="CalendarDateText" parent="TextAppearance.MaterialComponents.Body2">
            <item name="android:textSize">14sp</item>
        </style>

        <style name="CalendarWeekText" parent="TextAppearance.MaterialComponents.Caption">
            <item name="android:textSize">12sp</item>
